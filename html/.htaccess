Satisfy any
<IfModule mod_rewrite.c>
	<IfModule mod_negotiation.c>
		Options -MultiViews
	</IfModule>

	RewriteEngine On

	# Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

	RewriteCond %{REQUEST_FILENAME} -d [OR]
	RewriteCond %{REQUEST_FILENAME} -f
	RewriteRule ^ ^$1 [N]

	# RewriteCond %{REQUEST_URI} (\.\w+$) [NC]
	# RewriteRule ^(.*)$ public/$1

	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteRule ^ index.php
</IfModule>

<IfModule mod_headers.c>
    # Allow requests from specific origins
    Header always set Access-Control-Allow-Origin "*"
    # Allow the following HTTP methods
    #Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    # Allow the following headers in the actual request
    Header always set Access-Control-Allow-Headers "*"
    # Allow credentials (cookies, authorization headers, etc.) to be included in the request
    Header always set Access-Control-Allow-Credentials "true"
    # Set the cache duration for preflight requests (in seconds)
    #Header always set Access-Control-Max-Age "3600"
</IfModule>
# If it's a preflight request, respond immediately without going through the usual logic
RewriteEngine On
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]